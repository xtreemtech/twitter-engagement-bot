{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python wsgi.py",
    "restartPolicyType": "ON_FAILURE",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300
  }
}

{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn -k eventlet -w 1 app:app --bind 0.0.0.0:$PORT",
    "restartPolicyType": "ON_FAILURE"
  }
}